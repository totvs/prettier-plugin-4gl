{
  "name": "@totvs/prettier-plugin-4gl",
  "displayName": "Prettier Plugin 4GL Formatter",
  "description": "Extensão Prettier para formatação de código 4GL.",
  "version": "0.1.4",
  "publisher": "TOTVS S.A",
  "author": {
    "name": "TOTVS S.A",
    "email": "tecnologia@totvs.com.br"
  },
  "license": "Apache-2.0",
  "keywords": [
    "4gl",
    "tds",
    "totvs",
    "prettier",
    "formatter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/totvs/prettier-plugin-4gl.git"
  },
  "bugs": {
    "url": "https://github.com/totvs/prettier-plugin-4gl/issues"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "main": "lib/index.js",
  "types": "typings/index.d.ts",
  "files": [
    "lib/",
    "typings/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf ./lib && rimraf ./typings",
    "build": "tsc --version && tsc -p ./src",
    "watch": "tsc -p ./src --watch",
    "prebuild": "npm run clean",
    "---TEST---": "",
    "test": "jest ",
    "test:snapshot": "npm run test -- --updateSnapshot",
    "test:singlefile": "npm run test -- --testNamePattern hello4.4gl",
    "test:folder": "npm run test -- --testPathPattern blocks",
    "test:coverage": "npm run test -- --coverage",
    "test:onlyFailures": "npm run test --onlyFailures ",
    "pretest": "npm run build",
    "---RELEASE---": "",
    "release": "npx standard-version",
    "to_publish": "git push --follow-tags origin develop && npm publish --access public",
    "prepack": "npm run build",
    "---MISC---": "",
    "lint": "eslint ./src/**",
    "contributors:check": "npx all-contributors check",
    "contributors:generate": "npx all-contributors generate",
    "link:tds-parsers": "npm link ../tds-parsers"
  },
  "dependencies": {
    "@totvs/tds-parsers": "^0.1.6",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-snapshot-serializer-raw": "^1.2.0",
    "jest-watch-typeahead": "^0.6.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
