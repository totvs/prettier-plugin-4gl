{
  "name": "@totvs/prettier-plugin-4gl",
  "displayName": "Prettier Plugin 4GL Formatter",
  "description": "Extensão para o adicional Prettier, para formatação de código 4GL.",
  "version": "0.0.2",
  "publisher": "TOTVS",
  "author": {
    "name": "TOTVS",
    "email": "tecnologia@totvs.com.br"
  },
  "license": "MIT",
  "keywords": [
    "4gl",
    "tds",
    "totvs",
    "prettier",
    "plugin",
    "formatter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/totvs/prettier-plugin-4gl.git"
  },
  "bugs": {
    "url": "https://github.com/totvs/prettier-plugin-4gl/issues"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "main": "lib/index.js",
  "types": "typings/4gl-parser.d.ts",
  "files": [
    "bin/",
    "lib/",
    "typings/",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "formatter-4gl": "./bin/formatter-4gl.js"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc -p ./src",
    "test": "jest",
    "test:snapshot": "npm run test -- -u ",
    "test:debug": "npm run test -- -t 'hello3'",
    "test:snapshotDbg": "npm run test -- -u -t 'hello'",
    "pretest": "npm run build",
    "prebuild": "npm run clean & npm run pegjs:4gl",
    "pegjs:4gl": "pegjs -o src/4gl.js grammar/4gl.pegjs",
    "------": "",
    "release": "standard-version",
    "tag": "git push --follow-tags",
    "publish": "npm publish",
    "-------": "",
    "contributors:check": "all-contributors check",
    "contributors:generate": "all-contributors generate",
    "link:create": "npm link"
  },
  "peerDependencies": {
    "prettier": "^2.0.0"
  },
  "dependencies": {
    "prettier": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "codecov": "^3.7.2",
    "husky": "^4.2.5",
    "jest": "^26.3.0",
    "jest-watch-typeahead": "^0.6.0",
    "ora": "^5.0.0",
    "pegjs": "^0.10.0",
    "prettier-plugin-pegjs": "^0.3.1",
    "standard-version": "^8.0.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
