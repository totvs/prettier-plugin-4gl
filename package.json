{
  "name": "prettier-plugin-4gl",
  "displayName": "Prettier Plugin 4GL Formatter",
  "description": "Extensão Prettier para formatação de código 4GL.",
  "version": "0.0.4",
  "publisher": "TOTVS",
  "author": {
    "name": "TOTVS",
    "email": "tecnologia@totvs.com.br"
  },
  "license": "MIT",
  "keywords": [
    "4gl",
    "tds",
    "totvs",
    "prettier",
    "plugin",
    "formatter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/totvs/prettier-plugin-4gl.git"
  },
  "bugs": {
    "url": "https://github.com/totvs/prettier-plugin-4gl/issues"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "main": "lib/index.js",
  "types": "typings/index.d.ts",
  "files": [
    "bin/",
    "lib/",
    "typings/",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "formatter-4gl": "./bin/cli/formatter-4gl.js"
  },
  "scripts": {
    "clean": "rimraf ./lib && rimraf ./typings",
    "build": "tsc -p ./src",
    "watch": "tsc -p ./src --watch",
    "prebuild": "npm run clean",
    "---CLI---": "",
    "clean:cli": "rimraf ./bin",
    "build:cli": "tsc -p ./cli",
    "prebuild:cli": "npm run clean:cli",
    "---TEST---": "",
    "test": "jest --runInBand -t hello2.4gl",
    "test:snapshot": "npm run test -- --update-snapshot ",
    "test:coverage": "npm run test -- --coverage",
    "pretest": "npm run build",
    "---RELEASE---": "",
    "release": "standard-version",
    "tag": "git push --follow-tags",
    "publish": "npm publish",
    "pack": "npm pack",
    "prepack": "npm run build:cli && npm run build",
    "---MISC---": "",
    "contributors:check": "all-contributors check",
    "contributors:generate": "all-contributors generate",
    "link:tds-parsers": "npm link ../tds-parsers --force"
  },
  "peerDependencies": {
    "prettier": "^2.0.0"
  },
  "dependencies": {
    "commander": "^6.2.1",
    "prettier": "^2.2.1",
    "tds-parsers": "^0.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "standard-version": "^9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
