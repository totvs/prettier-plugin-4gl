{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Program",
      "program": "${workspaceFolder}/bin/cli/cli.js",
      "request": "launch",
      "args": ["--no-banner", "format", "e:\\4gl\\**\\*.4gl"],
      "type": "node",
      "preLaunchTask": "npm:build:cli"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest All",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm:build",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "disableOptimisticBPs": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/jest/bin/jest",
        "--runInBand",
        "-t",
        "${fileBasename}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm:build",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "disableOptimisticBPs": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Select File",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/jest/bin/jest",
        "--runInBand",
        "-t",
        "hello3.4gl"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm:build",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "disableOptimisticBPs": true
    }
  ]
}
