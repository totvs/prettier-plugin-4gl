{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["ES2016"],
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2016",
    "skipLibCheck": true,
    "typeRoots": ["./ts-declarations", "node_modules/@types", "../../node_modules/@types"],
    "resolveJsonModule": true,
    "rootDir": "src",
    "declaration": false,
    "composite": false
  }
}
