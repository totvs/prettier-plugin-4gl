{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "../bin",
        "sourceMap": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noUnusedLocals": false,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": false,
        "allowJs": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "declaration": true,
        "declarationMap": true,
        "strict": false, /* enable all strict type-checking options */
        "noUnusedParameters": false,
        "resolveJsonModule": true,
    },
    "exclude": [
        "node_modules/",
        "out/",
        "test/",
        "package.json"
    ]
}